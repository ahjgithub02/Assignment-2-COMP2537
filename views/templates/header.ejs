<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container d-flex flex-column flex-lg-row align-items-start align-items-lg-center">
            <a class="navbar-brand mb-2 mb-lg-0" href="/">My App</a>
            <div class="navbar-nav d-flex flex-column flex-lg-row ms-lg-auto">
                <% if (['signup', 'login'].includes(page)) { %>
                    <a class="nav-link" href="/">Home</a>
                <% } %>          
                <% if (locals.loggedInConfirmation) { %>
                    <% if (page !== 'home') { %>
                        <a class="nav-link" href="/">Home</a>
                    <% } %>
                    <% if (locals.isAdmin && page !== 'admin') { %>
                        <a class="nav-link" href="/admin">Admin</a>
                    <% } %>
                    <% if (loggedInConfirmation && page === 'admin') { %>
                        <a class="nav-link" href="/logout">Logout</a>
                    <% } %>                
                <% } %>
            </div>
        </div>
    </nav>
