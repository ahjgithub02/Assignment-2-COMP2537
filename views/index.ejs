<%- include("templates/header") %>

<div class="container text-center mt-5">
    <% if (loggedInConfirmation) { %>
        <h2 class="mb-4">Hello, <%= name %>!</h2>
        <div class="d-grid gap-2">
            <a href="/members" class="btn btn-success btn-lg w-100 text-nowrap">Members Area</a>
            <a href="/logout" class="btn btn-outline-primary btn-lg w-100 text-nowrap">Log Out</a>
        </div>
    <% } else { %>
        <h2 class="mb-4">Welcome! Please Sign Up or Login!</h2>
        <div class="d-grid gap-2">
            <a href="/signup" class="btn btn-success btn-lg w-100 text-nowrap">Sign Up</a>
            <a href="/login" class="btn btn-outline-primary btn-lg w-100 text-nowrap">Login</a>
        </div>
    <% } %>
</div>

<%- include("templates/footer") %>